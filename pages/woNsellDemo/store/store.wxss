/* pages/woNsellDemo/store/store.wxss */

.test {
  border: 1rpx solid #000;
  background-color: aqua;
  /* widows: 100px;  
	height: 100px; */
}

.backGround {
  width: 100%;
  height: 100rpx;
  position: fixed;
  z-index: -1;
}

.conTain {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  margin-top: 20%;
}

.announceMent {
  margin-top: 10rpx;
  width: 90%;
  height: 130rpx;
  background: #fff;
  box-shadow: 0 5rpx 20rpx 0 rgba(0, 0, 0, 0.06);
  border-radius: 15rpx;
}

.announceMent .tittleContain {
  position: absolute;
  height: 70rpx;
  width: 65%;
  display: inline-block;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.announceMent .news {
  width: 70rpx;
  height: 70rpx;
  margin-top: 30rpx;
}

.announceMent .decoRate1 {
  position: relative;
  float: left;
  width: 40rpx;
  height: 40rpx;
}

.announceMent .decoRate2 {
  position: relative;
  width: 30rpx;
  height: 30rpx;
  float: right;
  margin-top: 100rpx;
}

.announceMent .tittle {
  position: relative;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #171f24;
  letter-spacing: 0;
  line-height: 30rpx;
  font-weight: bold;
}

.announceMent .context {
  position: relative;
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #aab2b7;
  letter-spacing: 0;
  line-height: 55rpx;
}

.tittleInfo {
  margin-top: 20rpx;
}

.tittleInfo text {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #999;
  letter-spacing: 0;
  text-align: center;
  margin-left: 18rpx;
  margin-right: 18rpx;
}

.tittleInfo .decoRate1 {
  background-image: linear-gradient(-132deg, #ff8260 3%, #ffc391 100%);
  width: 12rpx;
  height: 12rpx;
  transform: rotate(45deg);
  display: inline-block;
  margin-bottom: 6rpx;
}

.tittleInfo .decoRate2 {
  background-image: linear-gradient(-132deg, #80c6fb 3%, #88e5fc 100%);
  width: 12rpx;
  height: 12rpx;
  transform: rotate(45deg);
  display: inline-block;
  margin-bottom: 6rpx;
}

.contextBox {
  margin-top: 10rpx;
  width: 90%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.busIness {
  width: 47%;
  height: 205rpx;
  margin-bottom: 50rpx;
  background: #fff;
  box-shadow: 0 2px 13px 0 rgba(0, 0, 0, 0.08);
  border-radius: 5px;
  text-align: center;
}

.busIness image {
  margin-top: 30rpx;
  width: 100rpx;
  height: 100rpx;
}

.busIness view {
  margin-top: 10rpx;
  font-family: PingFangSC-Regular;
  font-size: 25rpx;
  color: #000;
  letter-spacing: 0;
  text-align: center;
}

.keyBusiness {
  width: 100%;
  height: 205rpx;
  background: #fff;
  box-shadow: 0 2px 13px 0 rgba(0, 0, 0, 0.08);
  border-radius: 5px;
  text-align: center;
}

.keyBusiness image {
  width: 100rpx;
  height: 100rpx;
  margin-top: 30rpx;
}

.keyBusiness view {
  margin-top: 10rpx;
  font-family: PingFangSC-Regular;
  font-size: 25rpx;
  color: #000;
  letter-spacing: 0;
  text-align: center;
}

.header {
  position: fixed;
  top: 0rpx;
  width: 100%;
  height: 7%;
  display: flex;
  z-index: 10;
  justify-content: space-around;
  text-align: left;
  /* background: #FFFFFF; */
  box-shadow: 0 0 6px 0 rgba(0, 0, 0, 0.10);
}
